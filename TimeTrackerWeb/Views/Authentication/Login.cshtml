@model UserModel

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

@{
    ViewData["Title"] = "Login";
    string username = ViewBag.username;
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-12 col-lg-6">
        <div class="col-12">
            <h1>Welcome</h1>
        </div>

        <div class="col-12 visible-xs visible-sm visible-md">
            <img src="@Url.Content("/img/login_image.png")" alt="login image" />
        </div>

        <div class="col-12">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" value="@(string.IsNullOrEmpty(username) ? "" : username)" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class=" col-6 visible-lg visible-xl">
        <div class="">
            <img src="@Url.Content("/img/login_image.png")" alt="login image" />
        </div>
    </div>
</div>

<br />
    No Account? No problem! <a asp-action="SignUp">Sign Up</a>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}