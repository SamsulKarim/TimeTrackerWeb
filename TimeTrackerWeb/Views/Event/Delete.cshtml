@model EventModel

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="StartDateTime" class="control-label"></label>
            <input asp-for="StartDateTime" class="form-control" disabled/>
            <span asp-validation-for="StartDateTime" class="text-danger"></span>
        </div>
               <div class="form-group">
            <label asp-for="EndDateTime" class="control-label"></label>
            <input asp-for="EndDateTime" class="form-control" disabled/>
            <span asp-validation-for="EndDateTime" class="text-danger"></span>
        </div>
               <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" disabled/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id"/>
    <input type="hidden" asp-for="ProjectId"/>
    <input type="submit" value="Delete" class="btn btn-danger"/>
    <br/><br/>
    @Html.Partial("./BackToEventListButton", Model.ProjectId)
</form>