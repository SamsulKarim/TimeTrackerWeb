@model EventModel

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="StartDateTime" class="control-label"></label>
            <input asp-for="StartDateTime" class="form-control" disabled />
            <span asp-validation-for="StartDateTime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndDateTime" class="control-label"></label>
            <input asp-for="EndDateTime" class="form-control" disabled />
            <span asp-validation-for="EndDateTime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" disabled />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <br /><br />
    @Html.Partial("./BackToEventListButton", Model.ProjectId)
</div>