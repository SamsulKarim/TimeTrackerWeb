@model IEnumerable<EventModel>

@{
    ViewData["Title"] = "Events";
}

<h1 style="text-align:center">@ViewData["Title"]</h1>

<body>
    <a asp-action="Create" asp-route-id="@ViewBag.itemId" class="btn btn-success" style="margin-left: 30px">New Event</a>
    <a asp-action="Create" asp-route-id="@ViewBag.itemId" style="float:right; margin-right: 30px" class="btn btn-primary">Start Clock</a>
</body>

<div class="container" style="padding: 10px">
    <hr style="border: 1px solid green;"/>

    <div class="row">
        <div class="col-3 col-sm-3 col-md-3 col-lg-3 col-xl-3">
            <h3 style="text-align: center">Start</h3>
        </div>
        <div class="col-3 col-sm-3 col-md-3 col-lg-3 col-xl-3">
            <h3 style="text-align: center">End</h3>
        </div>
        <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 ">
            <h3 style="text-align: left">Details</h3>
        </div>
    </div>

    <hr style="border: 1px solid green;"/>

    @foreach (var item in Model)
    {
        <a asp-action="Details" asp-route-id="@item.Id">
            <div class="row" style="text-align: center">
                <div class="col-3 col-sm-3 col-md-3 col-lg-3 col-xl-3 ">
                    <body>
                    @Html.DisplayFor(modelItem => item.StartTime)
                    @Html.DisplayFor(modelItem => item.StartDate)
                    </body>
                </div>

                <div class="col-3 col-sm-3 col-md-3 col-lg-3 col-xl-3">
                    @{
                        if (item.EndTime == null || item.EndDate == null)
                        {
                            <input type="button" asp-action="Edit" asp-route-id="@item.Id" style="width: 50%" class="btn btn-danger" value="Stop"/>
                        }
                        else
                        {
                            <body>
                            @Html.DisplayFor(modelItem => item.EndTime)
                            @Html.DisplayFor(modelItem => item.EndDate)
                            </body>
                        }
                    }
                </div>
                <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-4" style="text-align: left">
                    <body>@Html.DisplayFor(modelItem => item.Description)</body>
                </div>
            </div>
            <hr style="border: 1px dotted green;"/>
        </a>
    }
</div>