@model ProjectModelWithQuantitiesOfTime

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" disabled />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" disabled />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        Totals:
        <div class="col-4" style="white-space: nowrap">
            Millenniums: @Model.QuantitiesOfTimeModel.TotalMillenniums
        </div>
        <div class="col-4" style="white-space: nowrap">
            Centuries @Model.QuantitiesOfTimeModel.TotalCenturies
        </div>
        <div class="col-4" style="white-space: nowrap">
            Decades @Model.QuantitiesOfTimeModel.TotalDecades
        </div>
        <div class="col-4" style="white-space: nowrap">
            Years: @Model.QuantitiesOfTimeModel.TotalYears
        </div>
        <div class="col-4" style="white-space: nowrap">
            Months: @Model.QuantitiesOfTimeModel.TotalMonths
        </div>
        <div class="col-4" style="white-space: nowrap">
            Weeks: @Model.QuantitiesOfTimeModel.TotalWeeks
        </div>
        <div class="col-4" style="white-space: nowrap">
            Days: @Model.QuantitiesOfTimeModel.TotalDays
        </div>
        <div class="col-4" style="white-space: nowrap">
            Hours: @Model.QuantitiesOfTimeModel.TotalHours
        </div>
        <div class="col-4" style="white-space: nowrap">
            Minutes: @Model.QuantitiesOfTimeModel.TotalMinutes
        </div>
        <div class="col-4" style="white-space: nowrap">
            Seconds @Model.QuantitiesOfTimeModel.TotalSeconds
        </div>
    </div>
    <div class="row">
        <div class="col">
            <br/>
        </div>
    </div>
    <div class="row">
        Relatives:
        <div class="col" style="white-space: nowrap" hidden="@(!Model.QuantitiesOfTimeModel.ShouldShowRelativeMillenniums)">
            Millenniums: @Model.QuantitiesOfTimeModel.RelativeMillenniums
        </div>
        <div class="col" style="white-space: nowrap" hidden="@(!Model.QuantitiesOfTimeModel.ShouldShowRelativeCenturies)">
            Centuries @Model.QuantitiesOfTimeModel.RelativeCenturies
        </div>
        <div class="col" style="white-space: nowrap" hidden="@(!Model.QuantitiesOfTimeModel.ShouldShowRelativeDecades)">
            Decades @Model.QuantitiesOfTimeModel.RelativeDecades
        </div>
        <div class="col" style="white-space: nowrap" hidden="@(!Model.QuantitiesOfTimeModel.ShouldShowRelativeYears)">
            Years: @Model.QuantitiesOfTimeModel.RelativeYears
        </div>
        <div class="col" style="white-space: nowrap" hidden="@(!Model.QuantitiesOfTimeModel.ShouldShowRelativeMonths)">
            Months: @Model.QuantitiesOfTimeModel.RelativeMonths
        </div>
        <div class="col" style="white-space: nowrap" hidden="@(!Model.QuantitiesOfTimeModel.ShouldShowRelativeWeeks)">
            Weeks: @Model.QuantitiesOfTimeModel.RelativeWeeks
        </div>
        <div class="col" style="white-space: nowrap" hidden="@(!Model.QuantitiesOfTimeModel.ShouldShowRelativeDays)">
            Days: @Model.QuantitiesOfTimeModel.RelativeDays
        </div>
        <div class="col" style="white-space: nowrap" hidden="@(!Model.QuantitiesOfTimeModel.ShouldShowRelativeHours)">
            Hours: @Model.QuantitiesOfTimeModel.RelativeHours
        </div>
        <div class="col" style="white-space: nowrap" hidden="@(!Model.QuantitiesOfTimeModel.ShouldShowRelativeMinutes)">
            Minutes: @Model.QuantitiesOfTimeModel.RelativeMinutes
        </div>
        <div class="col" style="white-space: nowrap" hidden="@(!Model.QuantitiesOfTimeModel.ShouldShowRelativeSeconds)">
            Seconds @Model.QuantitiesOfTimeModel.RelativeSeconds
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <br /><br />
    @Html.Partial("../SharedElements/BackToListButton")
</div>